
@{
    ViewData["Title"] = "Create_Post";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Create_Post</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="ClaimType" class="control-label"></label>
                <input asp-for="ClaimType" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ClaimValue" class="control-label"></label>
                <input asp-for="ClaimValue" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ClaimIssuer" class="control-label"></label>
                <input asp-for="ClaimIssuer" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
